{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "outDir": "dist",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "types/**/*.d.ts",
        "submodules/**/*.ts",
        "utils/**/*.ts",
        "scripts/**/*.ts"
    ]
}